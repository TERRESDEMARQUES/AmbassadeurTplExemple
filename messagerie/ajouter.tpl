<div id="templateMessagerieAjouter">

    <form id="templateMessagerieAjouter-form" action="{mAction-messagerie-add}" method="POST">

    	<div id="templateMessagerieAjouter-form-sujet">

    		<div id="templateMessagerieAjouter-form-sujet-label">

    			Objet de message

    		</div>

    		<div id="templateMessagerieAjouter-form-sujet-input">

    			<input id="formSujet" type='text' name="sujet">

    		</div>

    	</div>

    	<div id="templateMessagerieAjouter-form-message">

    		<div id="templateMessagerieAjouter-form-message-label">

    			Votre message

    		</div>

    		<div id="templateMessagerieAjouter-form-message-input">

    			<textarea id="formMessage" name="message"></textarea>

    		</div>

    	</div>

    </form>

    <div id="templateMessagerieAjouter-warning">

    	<i class='fa fa-warning'></i> <font id='templateMessagerieAjouter-warning-message'></font>

    </div>

    <div class='clear'></div>

    <div id="templateMessagerieAjouter-button">

			<img src="{content-boutonEnvoyer-image}">

    </div>

</div>
