<div class="templatePublicWallPost">

	<div class="templatePublicWallPost-image" 
	    data-video="{post-video}" 
	    data-images="{post-images}">
	        
	        <img src="{post-image}">
	            
	</div>
	
	<div class="templatePublicWallPost-type">
	
		<!-- BEGIN isGalerie -->
	
			<div class="templatePublicWallPost-type-galerie">
		
				<i class="fa fa-camera"></i>
		
			</div>
		
		<!-- END isGalerie -->
		
		<!-- BEGIN isVideo -->
	
			<div class="templatePublicWallPost-type-video">
		
				<i class="fa fa-video-camera"></i>
		
			</div>
		
		<!-- END isVideo -->
	
	</div>
	
	<div class="templatePublicWallPost-infos">
		
		<div class="templatePublicWallPost-infos-date">
		
		    {post-date}
			
			<div class="templatePublicWallPost-infos-like {post-likeClass}" data-id="{post-id}">
			
				<i class="fa fa-cog fa-spin"></i><i class="fa fa-heart"></i><i class="fa fa-heart-o"></i> 
				<font>J'aime</font> / <span>{post-countLikes}</span>
			
			</div>
			
		</div>
		
		<div class="templatePublicWallPost-infos-titre">{post-titre}</div>
		<div class="templatePublicWallPost-infos-sousTitre">{post-sousTitre}</div>
		<div class="templatePublicWallPost-infos-message">{post-message}</div>
		
	</div>
	
	<div class="templatePublicWallPost-share">
		
		<div class="addthis_inline_share_toolbox"></div>
		
		
	</div>
	
	<!-- BEGIN isLeft -->

		<a class="templatePublicWallPost-left" href="{isLeft.link}">
			
			<i class="fa fa-arrow-left"></i>
			
		</a>

	<!-- END isLeft -->
	
	<!-- BEGIN isRight -->
	
		<a class="templatePublicWallPost-right" href="{isRight.link}">
			
			<i class="fa fa-arrow-right"></i>
			
		</a>

	<!-- END isRight -->
	
	<div class="clear"></div>

</div>

